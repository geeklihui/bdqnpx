<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation"
		value="true" />

	<package name="default" namespace="/" extends="struts-default">

		<action name="user_*" method="{1}"
			class="com.bdqno.web.action.UserAction">
			<result name="login">/index.jsp</result>
			<result name="register">/login.jsp</result>
			<result name="findpwd">/login.jsp</result>
			<result name="fail">/error.jsp</result>
		</action>

		<action name="goods_*" method="{1}"
			class="com.bdqno.web.action.GoodsAction">
			<result name="all">/success.jsp</result>
			<result name="ok">/detail.jsp</result>
			<result name="fail">/fail.jsp</result>
		</action>

	</package>

	<!-- Add packages here -->

</struts>
